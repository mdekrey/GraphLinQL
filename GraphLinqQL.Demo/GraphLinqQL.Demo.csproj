<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>GraphLinqQL</RootNamespace>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>

    <ToolsRoot>../GraphQlInterfaceGeneration/</ToolsRoot>
    <InputSchemaV3>$(MSBuildProjectDirectory)/StarWarsV3/sw-schema.3.graphql</InputSchemaV3>
    <OutputFileV3>$(MSBuildProjectDirectory)/StarWarsV3/interfaces.generated.cs</OutputFileV3>
  </PropertyGroup>


  <Target Name="EnsureNodeEnv" BeforeTargets="CoreCompile" Condition=" !Exists('$(ToolsRoot)node_modules') ">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec WorkingDirectory="$(ToolsRoot)" Command="npm install" />
  </Target>

  <Target Name="EnsureInterfaces" BeforeTargets="CoreCompile" AfterTargets="EnsureNodeEnv" Inputs="$(InputSchemaV3)" Outputs="$(OutputFileV3)">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Rebuilding schema" />
    <Exec WorkingDirectory="$(ToolsRoot)" Command="npm start -- -i &quot;$(InputSchemaV3)&quot; -o &quot;$(OutputFileV3)&quot; -n GraphLinqQL.StarWarsV3.Interfaces" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\GraphLinqQL\GraphLinqQL.csproj" />
  </ItemGroup>

</Project>
