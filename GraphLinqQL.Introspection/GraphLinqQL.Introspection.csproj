<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <InputSchema>$(MSBuildProjectDirectory)/introspection.graphql</InputSchema>
    <OutputFile>$(MSBuildProjectDirectory)/interfaces.generated.cs</OutputFile>
    <GraphLinqQLArguments>--introspection</GraphLinqQLArguments>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="introspection.graphql" />
  </ItemGroup>

  <ItemGroup>
    <GraphLinqQlSchema Include="Introspection\introspection.graphql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.0.0-preview9.19423.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GraphLinqQL.Resolvers\GraphLinqQL.Resolvers.csproj" />
  </ItemGroup>

  <Import Project="$(BuildRootDir)package/GraphLinqQL.targets" />

</Project>
